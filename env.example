# API Credentials
XT_XARID_LOGIN=your_api_login
XT_XARID_PASSWORD=your_api_password

# MySQL Database Configuration
MYSQL_DB=github_scrapper
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_HOST=your_mysql_host
MYSQL_PORT=3306

# MySQL SSL Configuration
# For local development: use file paths
MYSQL_SSL_CA=/path/to/ca-cert.pem
MYSQL_SSL_CERT=/path/to/client-cert.pem  # Optional
MYSQL_SSL_KEY=/path/to/client-key.pem    # Optional

# For GitHub Actions: paste the certificate content in secrets
# The workflow will automatically create files from the content
# MYSQL_SSL_CA secret should contain the full certificate content:
# -----BEGIN CERTIFICATE-----
# MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...
# -----END CERTIFICATE-----

MYSQL_SSL_VERIFY_CERT=true
MYSQL_SSL_VERIFY_IDENTITY=true
